<h1>Friends</h1>

<div id="friends">
  <table class="table table-striped table-bordered table-primary table-hover">
    <thead class="table-dark">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td>
            <%= link_to "Show", friend, class: "btn btn-info" %>
            <%= link_to "Edit", edit_friend_path(friend), class: "btn btn-warning" %>
            <%= link_to "Delete", friend, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>
